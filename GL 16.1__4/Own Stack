#include <iostream>
#include <string>
using namespace std;

template <typename T>
class Stack
{
	struct Element
	{
		T inf;
		Element* next;
		Element(T x, Element* p) : inf(x), next(p) {}
	};
	Element* head;
public:
	Stack() : head(0) {}
	bool empty()
	{
		return head == 0;
	}
	T pop()
	{
		if (empty())
		{
			return 0;
		}
		Element* r = head;
		T i = r->inf;
		head = r->next;
		delete r;
		return i;
	}
	void push(T data) {
		head = new Element(data, head);
	}
};

int main()
{
	Stack <string> A, res;
	int n, k = 0;
	cout << "Enter a number\t";
	cin >> n;
	char letter;
	cout << "\nEnter a letter\t";
	cin >> letter;

	for (int i = 0; i < n; i++) {
		string s;
		cin >> s;
		A.push(s);
	}

	for (int i = 0; i < n; i++) {
		string s = A.pop();
		if (s[0] == letter) {
			res.push(s);
			k++;
		}
	}
	cout << k;
	system("pause");
	return 0;
}
